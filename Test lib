    ConfirmationWindow.Position = UDim2.new(0.5, -175, 0.5, -90)
    ConfirmationWindow.BackgroundColor3 = Colors.DarkBackground
    ConfirmationWindow.BackgroundTransparency = 0.1
    ConfirmationWindow.ZIndex = 19
